<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_220sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        app:srcCompat="@drawable/eclipse" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/partager_votre_location"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/text_localiser"/>

    <ImageView
        android:layout_marginTop="@dimen/_19sdp"
        android:id="@+id/btn_activerLocalisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_activere" />

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-35sp"
        app:srcCompat="@drawable/text_btn" />

    <Button
        android:id="@+id/btn_notNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Pas Maintenant"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="@dimen/_15sdp"/>




</LinearLayout>