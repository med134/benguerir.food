<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".services.ui.location.Location">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/text_location"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="46dp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_gravity="center"
            android:background="@drawable/custom"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:editable="false"
            android:gravity="center"
            android:hint="Address"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/text_piotRebiir"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/custom"
            android:drawableStart="@drawable/apartment_24"
            android:gravity="center"
            android:hint="Etage/Immeubel/Poit de repÃ©re"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp">
        <fragment
            android:id="@+id/google_map5"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/getLocationsfragmant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-150dp"
            app:backgroundTint="@color/white"
            app:fabSize="normal"
            android:src="@drawable/my_location"
            app:layout_anchorGravity="center_vertical"
           android:layout_marginStart="@dimen/_240sdp"/>



    </LinearLayout>
</LinearLayout>