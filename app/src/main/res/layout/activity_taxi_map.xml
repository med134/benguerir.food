<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".services.ui.autre_services.taxi.TaxiMaps">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/votrePossition"
            android:layout_marginTop="@dimen/_8sdp"
            android:editable="false"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_50sdp"
            android:hint="Vote Possition"
            android:drawableStart="@drawable/location_24"
            android:gravity="center"
            android:paddingStart="@dimen/_14sdp"
            android:background="@android:drawable/editbox_background"
            android:layout_gravity="center"/>
        <AutoCompleteTextView
            android:id="@+id/search_view"
            android:paddingStart="@dimen/_20sdp"
            android:drawableStart="@drawable/search_24"
            android:hint="ajouter votre quartier"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_50sdp"
            android:iconifiedByDefault="false"
            android:layout_gravity="center"
            android:background="@android:drawable/editbox_background"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/taxiMaps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
        <Button
            android:id="@+id/btnTruck"
            android:layout_marginTop="-90sp"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Valider"
            android:background="@drawable/styl_btn"/>

         <com.google.android.material.floatingactionbutton.FloatingActionButton
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/getLocations"
             android:layout_marginTop="-140sp"
             android:src="@drawable/my_location"
             android:layout_marginStart="@dimen/_240sdp"
             app:fabSize="normal"
             android:clickable="true"
             app:backgroundTint="@color/white"
             app:layout_anchorGravity="center_horizontal"
             />

    </LinearLayout>

</LinearLayout>