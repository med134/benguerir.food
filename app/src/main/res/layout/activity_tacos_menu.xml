<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/tacosback"
    android:layout_height="match_parent"
    tools:context=".services.ui.restaurants.menuTacos.TacosMenu">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/bevan"
            android:gravity="center"
            android:text="Menu Tacos"
            android:textColor="#3fb336"
            android:textSize="25dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listTacos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_iteams_pizza"/>

</LinearLayout>