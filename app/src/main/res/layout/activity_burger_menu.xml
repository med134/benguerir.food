<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backburger"
    android:layout_height="match_parent"
    tools:context=".services.ui.restaurants.menuBerger.BurgerMenu">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="55sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/bevan"
            android:gravity="center"
            android:text="Menu Burgers"
            android:textColor="#3fb336"
            android:textSize="25dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listBurger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_iteams_pizza"></ListView>

</LinearLayout>