<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecebe6"
    android:orientation="vertical"
    tools:context=".services.ui.restaurants.confirmer_comendes.Caisse">

    <Toolbar
        android:id="@+id/backbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="#ffa632"
        android:clickable="true"
        android:contextClickable="true"
        android:navigationIcon="@drawable/back_24"
        android:focusable="true"
        android:title="Caisse"
        android:titleTextColor="@color/white"
        >

    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="592dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="83dp">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="378dp"
                android:layout_height="95dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="67dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="28sp"
                        android:src="@drawable/moto" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="Livraison"
                        android:textColor="#292B29"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="Livraison en 15-20 min"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="378dp"
                android:layout_height="140dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageComande"
                        android:layout_width="70dp"
                        android:layout_height="67dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="28sp"
                        android:src="@drawable/foood" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="Votre Commande"
                        android:textColor="#292B29"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/titleComande"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="13sp"
                        android:text="Livraison en 15-20 min"
                        android:textColor="#2C2E2C"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnAddProduits"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginTop="100sp"
                    android:layout_marginStart="140sp"
                    android:background="#00000000"
                    android:backgroundTint="#FFFFFFFF"
                    android:text="Ajouter des produits"
                    android:textColor="#ffa632" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="378dp"
                android:layout_height="110dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="67dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="28sp"
                        android:src="@drawable/location" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="lieu de Livraison"
                        android:textColor="#292B29"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lieuDeLivrasion"
                        android:layout_width="200dp"
                        android:layout_height="68dp"
                        android:layout_marginStart="10sp"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="378dp"
                android:layout_height="110dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="81dp"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="67dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="28sp"
                        android:src="@drawable/phone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:text="Numéro de Téléphone"
                        android:textColor="#292B29"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/textNumbre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:backgroundTint="#ffa632"
                        android:hint="numéro de telephone"
                        android:inputType="phone"

                        />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="378dp"
                android:layout_height="95dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="67dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="28sp"
                        android:src="@drawable/comment" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="249dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="120sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_edit_text"
                        android:hint="Ajouter Commentaire"
                        android:inputType="text"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="378dp"
                android:layout_height="95dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="71dp"
                        android:layout_height="67dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="28sp"
                        android:src="@drawable/tot" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="249dp"
                    android:layout_height="73dp"
                    android:layout_marginStart="120sp"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total (incl.Vat)"
                        android:textColor="#292B29"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/totalPrix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textColor="#292B29"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:text="DHS"
                            android:textColor="#292B29"
                            android:textSize="21sp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="40dp"
        android:layout_below="@+id/layout1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        tools:ignore="NotSibling,UnknownId">

        <Button
            android:id="@+id/btnConfirmer"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:background="#ffa632"
            android:text="Confirmer la demande"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>









</RelativeLayout>