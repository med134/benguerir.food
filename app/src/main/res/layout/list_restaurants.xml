<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:id="@+id/mycard"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_230sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/card_background">
        <ImageView
            android:id="@+id/imageRstraunt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_130sdp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/alpha"/>
        <Button
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_32sdp"
            android:text="15-20 min"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_110sdp"
            android:layout_marginStart="@dimen/_200sdp"
            android:background="@drawable/card_background"/>

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_140sdp"
            android:fontFamily="@font/days_one"
            android:text="Name Restaurant"
            android:textColor="#04BC1D"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/menutext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:text="Les commentaires de cette vidéo sont masqués"
            android:layout_marginTop="@dimen/_170sdp"/>
        <RatingBar
            android:id="@+id/serviceRagtinBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="8"
            android:layout_marginTop="@dimen/_190sdp"
            android:padding="@dimen/_12sdp"
            android:progressTint="#ffa632"
            android:rating="4"
            android:stepSize="0.5" />
    </androidx.cardview.widget.CardView>
</LinearLayout>