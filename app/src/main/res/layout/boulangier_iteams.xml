<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_12sdp"
    android:layout_marginBottom="10sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/picee"
               android:paddingStart="10sp"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_marginTop="15sp"
               android:src="@drawable/pain_complet"/>
       </LinearLayout>

        <TextView
            android:id="@+id/namePain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120sp"
            android:layout_marginTop="-100sp"
            android:fontFamily="@font/carter_one"
            android:text="Pain Complet"
            android:textColor="#212020"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pricePain"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginStart="120sp"
            android:text="discription"
            android:textColor="#605959"
            android:textSize="16sp"
            />

        <RatingBar
            android:id="@+id/serviceRagtinBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_gravity="left"
            android:numStars="5"
            android:progressTint="#ffa632"
            android:rating="2"
            android:stepSize="0.5"
            android:layout_marginStart="125sp"
            android:layout_marginTop="8sp"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>