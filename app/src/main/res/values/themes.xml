        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>
    <style name="Theme.Caisse" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="roundImagePanier" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>
    <style name="radioButton" parent="Theme.AppCompat.DayNight.DarkActionBar">
